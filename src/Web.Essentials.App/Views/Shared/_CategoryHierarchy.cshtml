            if (response.ok) {
                showSuccess('ã‚«ãƒ†ã‚´ãƒªãŒæ­£å¸¸ã«å‰Šé™¤ã•ã‚Œã¾ã—ãŸ');
                
                // ãƒãƒ¼ãƒ‰ã‚’ç”»é¢ã‹ã‚‰å‰Šé™¤
                const node = document.querySelector(`[data-category-id="${categoryId}"]`);
                if (node) {
