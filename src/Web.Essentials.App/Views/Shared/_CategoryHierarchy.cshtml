    }
    
    // ã‚«ãƒ†ã‚´ãƒªå‰Šé™¤å®Ÿè¡Œ
    async function deleteCategory(categoryId) {
        try {
            const response = await fetch(`/Categories/Delete/${categoryId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': getAntiForgeryToken()
